                    <init-param>
                        <param-type>int</param-type>
                        <param-value>{type-id}</param-value>
                    </init-param>
                    <init-param>
                        <param-type>java.lang.Class</param-type>
                        <param-value>{class}</param-value>
                    </init-param>
                    <init-param>
                        <param-type>boolean</param-type>
                        <param-value>true</param-value>
                    </init-param>
                </init-params>
